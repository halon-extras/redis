{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"description": "redis schema",
	"oneOf": [
		{
			"type": "object",
			"additionalProperties": false,
			"required": ["type"],
			"properties": {
				"type": {
					"type": "string",
					"enum": ["standalone"],
					"description": "The type"
				},
				"host": { "$ref": "#/definitions/host" },
				"port": { "$ref": "#/definitions/port" },
				"user": { "$ref": "#/definitions/user" },
				"password": { "$ref": "#/definitions/password" },
				"pool_size": { "$ref": "#/definitions/pool_size" },
				"connect_timeout": { "$ref": "#/definitions/connect_timeout" },
				"socket_timeout": { "$ref": "#/definitions/socket_timeout" }
			}
		},
		{
			"type": "object",
			"additionalProperties": false,
			"required": ["type"],
			"properties": {
				"type": {
					"type": "string",
					"enum": ["cluster"],
					"description": "The type"
				},
				"host": { "$ref": "#/definitions/host" },
				"port": { "$ref": "#/definitions/port" },
				"user": { "$ref": "#/definitions/user" },
				"password": { "$ref": "#/definitions/password" },
				"pool_size": { "$ref": "#/definitions/pool_size" },
				"connect_timeout": { "$ref": "#/definitions/connect_timeout" },
				"socket_timeout": { "$ref": "#/definitions/socket_timeout" }
			}
		},
		{
			"type": "object",
			"additionalProperties": false,
			"required": ["type", "master_name"],
			"properties": {
				"type": {
					"type": "string",
					"enum": ["sentinel"],
					"description": "The type"
				},
				"hosts": {
					"type": "array",
					"items": {
						"type": "object",
						"additionalProperties": false,
						"required": ["host"],
						"properties": {
							"host": { "$ref": "#/definitions/host" },
							"port": {
								"type": "integer",
								"minimum": 1,
								"default": 26379,
								"description": "The port"
							}
						}
					},
					"description": "The hosts"
				},
				"user": { "$ref": "#/definitions/user" },
				"password": { "$ref": "#/definitions/password" },
				"pool_size": { "$ref": "#/definitions/pool_size" },
				"connect_timeout": { "$ref": "#/definitions/connect_timeout" },
				"socket_timeout": { "$ref": "#/definitions/socket_timeout" },
				"master_name": { "$ref": "#/definitions/master_name" }
			}
		}
	],
	"definitions": {
		"host": {
			"type": "string",
			"minLength": 1,
			"default": "127.0.0.1",
			"description": "The host"
		},
		"port": {
			"type": "integer",
			"minimum": 1,
			"default": 6379,
			"description": "The port"
		},
		"user": {
			"type": "string",
			"minLength": 1,
			"description": "The user"
		},
		"password": {
			"type": "string",
			"minLength": 1,
			"description": "The password"
		},
		"pool_size": {
			"type": "integer",
			"minimum": 1,
			"default": 1,
			"description": "The pool size"
		},
		"connect_timeout": {
			"type": "integer",
			"minimum": 1,
			"description": "The connect timeout (in milliseconds)"
		},
		"socket_timeout": {
			"type": "integer",
			"minimum": 1,
			"description": "The socket timeout (in milliseconds)"
		},
		"master_name": {
			"type": "string",
			"minLength": 1,
			"description": "The master name"
		}
	}
}
